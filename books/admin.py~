# -*- coding: utf-8 -*-
from django.contrib import admin
from neolibrary.libri.models import *


admin.site.register([Editore, Sito_consultabile])

class EditoreInline(admin.StackedInline):
    model = Editore   

class LibroAdmin(admin.ModelAdmin):
    fieldsets = (
        (None, {
            'fields': ('titolo', 'autore','editore','materia')
        }),
        ('Classificazione', {
            'fields': ('colonna','palco','numero_libro')
        }),
        #('Altre informazioni', {
        #    'fields': (('argomento_principale','argomento_secondario'),('anno_edizione','anno_ristampa'),'note')
        #\}),
        ('Prestito', {
            'fields': (('stato_prestito','titolare_del_prestito'),'prestato_date')
        }),            
    )
    class Media:
    
    list_display = ('titolo','colonna','palco','numero_libro','materia','titolare_del_prestito')
    search_fields = ['titolo']     
    list_filter = ('materia','stato_prestito',)
    filter_horizontal = ['autore']
    #inlines = [EditoreInline]
admin.site.register(Libro, LibroAdmin)


class AutoreAdmin(admin.ModelAdmin):
    #fields = ['titolo', 'autore']
    list_display = ('nome', 'cognome')
    search_fields = ['nome', 'cognome']  

admin.site.register(Autore, AutoreAdmin)
